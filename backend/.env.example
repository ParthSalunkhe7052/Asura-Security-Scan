# Database Configuration
DATABASE_URL=sqlite:///./asura.db

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:5173

# AI Integration (Optional - v0.3.0+)
# Get free API key from: https://openrouter.ai
# OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Legacy AI Options (currently not used)
# GEMINI_API_KEY=your_key_here
# GROQ_API_KEY=your_key_here
# OLLAMA_BASE_URL=http://localhost:11434

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Scanner Path Security (Optional)
# Restrict which directories can be scanned to prevent directory traversal attacks
# Use semicolon (;) as separator on Windows, colon (:) on Linux/Mac
# Example Windows: ALLOWED_SCAN_ROOTS=C:\Users\YourName\Projects;D:\Code
# Example Linux: ALLOWED_SCAN_ROOTS=/home/username/projects:/opt/repos
# Leave empty or unset to allow scanning any accessible directory
# ALLOWED_SCAN_ROOTS=

# Scanner Timeout Configuration (seconds)
# Adjust these values based on your project size
# Small projects (< 1000 files): Use defaults or lower
# Large projects (> 10000 files): Increase timeouts
BANDIT_TIMEOUT=120
SAFETY_TIMEOUT=60
SEMGREP_TIMEOUT=180
